    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^9.9.1",
    "eslint-plugin-jest": "^28.8.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "release-it": "^17.1.1",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
