    "scope": "@hobbit44"
  },
  "release-it": {
    "git": {
      "commit": true,
      "commitMessage": "Release v${version}",
      "tag": true,
      "push": true
    },
    "github": {
      "release": true,
      "releaseName": "v${version}",
      "autoGenerate": true
    },
    "npm": {
      "publish": false
    }
  }
